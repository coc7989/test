pipeline {
    agent none
    parameters {
        string(name: 'cluster_name', defaultValue: 'ind-shared', description: 'Provide the cluster name (e.g., ind-shared, dal-edt)')
    }
    environment {
        NODE_LABEL = '' // Placeholder for the dynamically assigned agent label
    }
    stages {
        stage('Determine Agent') {
            steps {
                script {
                    // Map cluster_name to agent labels
                    if (params.cluster_name == 'ind-shared') {
                        env.NODE_LABEL = 'India'
                    } else if (params.cluster_name == 'dal-edt') {
                        env.NODE_LABEL = 'USA'
                    } else {
                        error "Unknown cluster_name: ${params.cluster_name}"
                    }
                    echo "Selected agent label: ${env.NODE_LABEL}"
                }
            }
        }
        stage('Run on Selected Agent') {
            agent {
                label env.NODE_LABEL
            }
            steps {
                echo "Running pipeline on agent: ${env.NODE_LABEL}"
            }
        }
    }
}
