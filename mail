pipeline {
    agent any

    parameters {
        string(name: 'CLUSTER_NAME', defaultValue: 'tii-shared', description: 'Enter the cluster')
    }

    environment {
        // Temporary placeholder, to be overwritten dynamically in the script block
        CONFIG_PATH = ''
    }

    stages {
        stage('Set Config Path') {
            steps {
                script {
                    env.CONFIG_PATH = "/user/${params.CLUSTER_NAME}/lsfadmin/tmp"
                    echo "Config Path set to: ${env.CONFIG_PATH}"
                }
            }
        }

        stage('Using Config Path') {
            steps {
                script {
                    echo "Using Config Path: ${env.CONFIG_PATH}"
                    // Add more steps to use the CONFIG_PATH variable
                }
            }
        }
    }
}
