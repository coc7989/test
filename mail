pipeline {
    agent any

    stages {
        stage('Build Frontend') {
            steps {
                script {
                    // Build the React frontend Docker image
                    sh '''
                    docker build -t react-frontend ./react-app
                    '''
                }
            }
        }

        stage('Run Frontend Container with Hot Reload') {
            steps {
                script {
                    // Run the React frontend container with hot reload
                    sh '''
                    docker run -d -p 3000:3000 \
                    -v $WORKSPACE/react-app:/usr/src/app \
                    -v /usr/src/app/node_modules \
                    react-frontend
                    '''
                }
            }
        }

        stage('Build Backend') {
            steps {
                script {
                    // Build the Flask backend Docker image
                    sh '''
                    docker build -t flask-backend ./flaskapp
                    '''
                }
            }
        }

        stage('Run Backend Container with Hot Reload') {
            steps {
                script {
                    // Run the Flask backend container with hot reload
                    sh '''
                    docker run -d -p 5000:5000 \
                    -v $WORKSPACE/flaskapp:/usr/src/app \
                    flask-backend
                    '''
                }
            }
        }
    }
}
