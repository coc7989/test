pipeline {
    agent none // Start without an agent
    parameters {
        string(name: 'cluster_name', defaultValue: 'cluster1', description: 'Select the cluster name')
    }
    stages {
        stage('Choose Agent') {
            agent {
                label params.cluster_name
            }
            steps {
                script {
                    echo "Running on agent with label: ${params.cluster_name}"
                }
            }
        }
        stage('Build') {
            agent {
                label params.cluster_name
            }
            steps {
                echo "Performing build on ${params.cluster_name}"
            }
        }
    }
}
