import React, { useState } from "react";
import axios from "axios";

const UserConfigForm = () => {
  const [userIds, setUserIds] = useState("");
  const [lsbOption, setLsbOption] = useState(false);
  const [slotPool, setSlotPool] = useState(35);

  const handleSubmit = async (e) => {
    e.preventDefault();

    const data = {
      user_ids: userIds.split(",").map((id) => id.trim()),
      lsb_option: lsbOption,
      slot_pool: lsbOption ? slotPool : 35, // Default to 35 if LSB option is not selected
    };

    try {
      const response = await axios.post("http://localhost:5000/api/update-files", data);
      alert(response.data.message);
    } catch (error) {
      console.error(error);
      alert("An error occurred while updating files.");
    }
  };

  return (
    <div>
      <h2>User Configuration</h2>
      <form onSubmit={handleSubmit}>
        <label>
          User IDs (comma-separated):
          <input
            type="text"
            value={userIds}
            onChange={(e) => setUserIds(e.target.value)}
            placeholder="e.g., c01234,c125623,c836228"
            required
          />
        </label>
        <br />

        <label>
          <input
            type="checkbox"
            checked={lsbOption}
            onChange={(e) => setLsbOption(e.target.checked)}
          />
          Edit LSB File
        </label>
        <br />

        {lsbOption && (
          <label>
            Slot Pool:
            <input
              type="number"
              value={slotPool}
              onChange={(e) => setSlotPool(e.target.value)}
              min="1"
              required
            />
          </label>
        )}
        <br />

        <button type="submit">Submit</button>
      </form>
    </div>
  );
};

export default UserConfigForm;
