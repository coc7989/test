def admin_queue_request():
    if request.method == 'GET':
        REQUEST_STATUS = request.args.get('REQUEST_STATUS')
        site_name = user_sites_mapping.get(userID)
        if REQUEST_STATUS not in ['PENDING', 'COMPLETED']:
            return jsonify({"error": "Invalid Status"}), 400

        # Define table names and mapping for REQUEST_TYPE
        tables = [
            {"table_name": dbCfg['QUEUE_ACCESS'], "request_type_column": "QUEUE"},
            {"table_name": dbCfg['SLOT_REQUEST'], "request_type_column": "SLOT_TYPE"},
        ]

        results = []

        try:
            db = get_db()
            cursor = db.cursor()

            for table in tables:
                table_name = table["table_name"]
                request_type_column = table["request_type_column"]

                # Build the query
                if REQUEST_STATUS == 'PENDING':
                    query = f"SELECT * FROM {table_name} WHERE CLUSTER_NAME = :site_name AND REQUEST_STATUS = 'PENDING'"
                else:  # COMPLETED
                    query = f"SELECT * FROM {table_name} WHERE CLUSTER_NAME = :site_name AND REQUEST_STATUS != 'PENDING'"

                cursor.execute(query, {"site_name": site_name})

                # Fetch column names and data
                columns = [col[0] for col in cursor.description]
                for row in cursor.fetchall():
                    row_dict = dict(zip(columns, row))

                    # Map the specific column to REQUEST_TYPE
                    row_dict["REQUEST_TYPE"] = row_dict.get(request_type_column, None)

                    # Remove the original column for REQUEST_TYPE
                    row_dict.pop(request_type_column, None)

                    results.append(row_dict)

            cursor.close()
            return jsonify(results), 200
        except Exception as e:
            return jsonify({'error': str(e)}), 500
