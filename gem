import React, { useState } from 'react';
import TextField from '@mui/material/TextField';
import Button from '@mui/material/Button';
import axios from 'axios';

function App() {
  const [featureName, setFeatureName] = useState('');
  const [featureArray, setFeatureArray] = useState([]);

  const handleFeatureSearch = () => {
    axios.post('/search_feature', { feature_name: featureName })
      .then(response => {
        setFeatureArray(response.data);
      })
      .catch(error => {
        console.error('Error searching feature:', error);
      });
  };

  return (
    <div>
      <TextField
        label="Enter Feature Name"
        variant="outlined"
        value={featureName}
        onChange={e => setFeatureName(e.target.value)}
      />
      <Button variant="contained" onClick={handleFeatureSearch}>Search</Button>

      <div>
        {featureArray.map((feature, index) => (
          <div key={index}>
            <p>Server Name: {feature.server_name}</p>
            <p>Feature Name: {feature.feature_name}</p>
            <p>Total Count: {feature.total_count}</p>
          </div>
        ))}
      </div>
    </div>
  );
}

export default App;
