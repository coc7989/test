pipeline {
    agent any
    
    stages {
        stage('Execute Script') {
            steps {
                script {
                    // Execute your script and capture the exit code
                    def exitCode = sh(script: 'your_script.sh arg1 arg2 > /dev/null 2>&1; echo $?', returnStatus: true)
                    
                    // Interpret the exit code as "Success" or "Failure"
                    if (exitCode == 0) {
                        echo "Script executed successfully: Success"
                    } else {
                        echo "Script execution failed: Failure"
                    }
                }
            }
        }
    }
}
