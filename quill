<VirtualHost *:80>

    # SERVER NAME ALIAS
    ServerName flameshub.dal.design.ti.com

    # Proxy Pass for /api
    # For Backend Container
    ProxyPass /api http://localhost:5000/api timeout=600
    ProxyPassReverse /api http://localhost:5000/api

    # Proxy Pass for /swaggerui
    # For Loading SwaggerUI
    ProxyPass /swaggerui http://localhost:5000/swaggerui timeout=600
    ProxyPassReverse /swaggerui http://localhost:5000/swaggerui

    # Proxy Pass for root
    ProxyPass / http://localhost:8080/ timeout=600
    ProxyPassReverse / http://localhost:8080/

    LogFormat "v %h %l %u %t \"%r\" %>s %b %{Authorization}i " my_special_format
    ErrorLog /etc/httpd/logs/error_log
    LogLevel warn
    CustomLog /etc/httpd/logs/access_log combined

</VirtualHost>
