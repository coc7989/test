cursor.execute("""
        SELECT vendor,
               SUM(CASE WHEN region = 'Dallas' THEN 1 ELSE 0 END) AS Dallas,
               SUM(CASE WHEN region = 'India' THEN 1 ELSE 0 END) AS India,
               SUM(CASE WHEN region = 'China' THEN 1 ELSE 0 END) AS China,
               SUM(CASE WHEN region = 'Israel' THEN 1 ELSE 0 END) AS Israel,
               SUM(CASE WHEN region = 'Fresing' THEN 1 ELSE 0 END) AS Fresing
        FROM your_mapping_table
        GROUP BY vendor
    """)
