pipeline {
    agent any

    stages {
        stage('Disable Crontab') {
            steps {
                script {
                    sh 'crontab -l > mycron'
                    sh 'sed -i "/your_cron_entry/s/^/#/" mycron' // Comment out the cron entry
                    sh 'crontab mycron'
                }
            }
        }
        stage('Perform Actions') {
            steps {
                // Your actions here
            }
        }
        stage('Enable Crontab') {
            steps {
                script {
                    sh 'crontab -l > mycron'
                    sh 'sed -i "/your_cron_entry/s/^#//" mycron' // Uncomment the cron entry
                    sh 'crontab mycron'
                }
            }
        }
    }
}
