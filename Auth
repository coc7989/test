from flask import Flask
from flask_session import Session

app = Flask(__name__)

# Configure the session type and backend
app.config['SESSION_TYPE'] = 'filesystem'  # You can use other options like 'redis', 'memcached', etc.
app.config['SESSION_FILE_DIR'] = '/tmp/flask_session'  # Directory to store session files
app.config['SESSION_PERMANENT'] = False
app.config['SESSION_USE_SIGNER'] = True  # Optional: enable session data signing
app.config['SESSION_KEY_PREFIX'] = 'prefix_'  # Optional: add a prefix to session keys

# Initialize the session extension
Session(app)

# Now you can use session in your routes
