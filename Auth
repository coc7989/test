import React, { useState } from 'react';
import Switch from '@mui/material/Switch';
import { DataGrid } from '@mui/x-data-grid';

const YourComponent = ({ compareData }) => {
  const [showOnlyDifferences, setShowOnlyDifferences] = useState(true);

  // Filter data based on switch state
  const filteredData = showOnlyDifferences ? compareData.filter(item => item.difference !== 0) : compareData;

  // Define columns for DataGrid
  const columns = [
    { field: 'file1', headerName: 'File 1', width: 150 },
    { field: 'file2', headerName: 'File 2', width: 150 },
    { field: 'difference', headerName: 'Difference', width: 150 },
  ];

  return (
    <div>
      <Switch
        checked={showOnlyDifferences}
        onChange={() => setShowOnlyDifferences(!showOnlyDifferences)}
        color="primary"
      />
      <label>Show Only Differences</label>
      
      <div style={{ height: 400, width: '100%' }}>
        <DataGrid
          rows={filteredData}
          columns={columns}
          pageSize={5}
          checkboxSelection
          disableSelectionOnClick
        />
      </div>
    </div>
  );
};

export default YourComponent;
