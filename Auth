import React from 'react';
import { DiffEditor } from 'react-ace';
import 'ace-builds/src-noconflict/mode-text';
import 'ace-builds/src-noconflict/theme-github';

const OriginalContent = `Original content here...`;
const ModifiedContent = `Modified content here...`;

const MyDiffEditor = () => {
  return (
    <DiffEditor
      value={[OriginalContent, ModifiedContent]}
      height="500px"
      width="100%"
      mode="text"
      theme="github"
      readOnly={true}
      highlightActiveLine={true}
      showPrintMargin={false}
      editorProps={{
        $blockScrolling: Infinity,
      }}
      setOptions={{
        showGutter: false,
      }}
      styles={{
        '.ace_added_content': {
          backgroundColor: '#d4edda', // Green background for added content
          color: '#155724', // Dark green text color
        },
        '.ace_removed_content': {
          backgroundColor: '#f8d7da', // Red background for removed content
          color: '#721c24', // Dark red text color
        },
      }}
    />
  );
};

export default MyDiffEditor;
