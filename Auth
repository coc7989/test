import React, { useState } from 'react';
import { TextField, Button, Modal } from '@mui/material';
import axios from 'axios';

const MailForm = ({ rowData }) => {
  const [to, setTo] = useState('');
  const [subject, setSubject] = useState('');
  const [body, setBody] = useState('');
  const [open, setOpen] = useState(false); // State to control modal open/close

  const handleSendClick = async () => {
    try {
      const response = await axios.post('/send-mail', {
        to,
        subject,
        body,
        rowData
      });
      console.log(response.data.message); // Assuming backend sends a response with a message field
      handleClose(); // Close the modal after sending
    } catch (error) {
      console.error('Error sending mail:', error);
    }
  };

  const handleOpen = () => {
    setOpen(true);
  };

  const handleClose = () => {
    setOpen(false);
  };

  return (
    <div>
      <Button variant="contained" onClick={handleOpen}>
        Mail
      </Button>
      <Modal
        open={open}
        onClose={handleClose}
        aria-labelledby="mail-modal-title"
        aria-describedby="mail-modal-description"
      >
        <div style={{ position: 'absolute', top: '50%', left: '50%', transform: 'translate(-50%, -50%)', width: 400, bgcolor: 'background.paper', border: '2px solid #000', boxShadow: 24, p: 4 }}>
          <TextField
            label="To"
            value={to}
            onChange={(e) => setTo(e.target.value)}
          />
          <TextField
            label="Subject"
            value={subject}
            onChange={(e) => setSubject(e.target.value)}
          />
          <TextField
            label="Body"
            value={body}
            onChange={(e) => setBody(e.target.value)}
            multiline
          />
          <Button variant="contained" onClick={handleSendClick}>
            Send
          </Button>
        </div>
      </Modal>
    </div>
  );
};

export default MailForm;
