import React, { useState, useEffect } from 'react';
import Button from '@mui/material/Button';
import CircularProgress from '@mui/material/CircularProgress';
import CheckIcon from '@mui/icons-material/Check';
import ErrorIcon from '@mui/icons-material/Error';
import axios from 'axios';

const userId = 'unique_user_id';  // Replace with your actual user ID logic

const RestoreButton = () => {
  const [loading, setLoading] = useState(false);
  const [success, setSuccess] = useState(false);
  const [failed, setFailed] = useState(false);
  const [alreadyRestored, setAlreadyRestored] = useState(false);

  useEffect(() => {
    const checkRestoreState = async () => {
      try {
        const response = await axios.get('http://localhost:5000/check_restore', {
          params: { user_id: userId }
        });
        if (response.data.restored) {
          setAlreadyRestored(true);
          setSuccess(true);
        }
      } catch (error) {
        console.error('Error checking restore state', error);
      }
    };

    checkRestoreState();
  }, []);

  const handleClick = async () => {
    setLoading(true);
    setSuccess(false);
    setFailed(false);
    
    try {
      const response = await axios.post('http://localhost:5000/restore', { user_id: userId });
      if (response.status === 200) {
        setSuccess(true);
        setAlreadyRestored(true);
      } else {
        setFailed(true);
      }
    } catch (error) {
      console.error('Error making the API call', error);
      setFailed(true);
    } finally {
      setLoading(false);
    }
  };

  return (
    <Button
      variant="contained"
      color={alreadyRestored ? "default" : success ? "success" : failed ? "error" : "primary"}
      onClick={handleClick}
      disabled={loading || alreadyRestored}
      startIcon={
        loading ? <CircularProgress size={20} /> :
        success || alreadyRestored ? <CheckIcon /> :
        failed ? <ErrorIcon /> : null
      }
    >
      {loading ? 'Restoring' : alreadyRestored ? 'Already Restored' : success ? 'Success' : failed ? 'Failed' : 'Restore'}
    </Button>
  );
};

export default RestoreButton;
