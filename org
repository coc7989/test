import React, { useState } from 'react';
import { TextField, Button, Grid, Select, MenuItem } from '@mui/material';
import axios from 'axios'; // Import axios for making HTTP requests

const Add = ({newRow, handleInputChange, handleAddRow}) => {
  const [userData, setUserData] = useState({ userName: '', email: '' });

  // Function to fetch user data based on ID
  const fetchUserData = async (id) => {
    try {
      const response = await axios.get(`YOUR_BACKEND_ENDPOINT/${id}`); // Replace YOUR_BACKEND_ENDPOINT with your actual endpoint
      const { userName, email } = response.data;
      setUserData({ userName, email });
    } catch (error) {
      console.error('Error fetching user data:', error);
    }
  };

  // Handler function for ID TextField
  const handleIDChange = (e) => {
    const { value } = e.target;
    handleInputChange(e); // Pass the event to the parent handler function
    fetchUserData(value); // Fetch user data based on the entered ID
  };

  return (
    <Grid container spacing={2} alignItems="center">
      <Grid item container columnSpacing={2} xs={12} sm={12} md={12}>
        <Grid item xs={4}>
          <TextField name="ID" label="ID" value={newRow.ID} onChange={handleIDChange} fullWidth />
        </Grid>
        <Grid item xs={4}>
          <Select
            name="ROLE"
            label="ROLE"
            value={newRow.ROLE}
            onChange={handleInputChange}
            fullWidth
          >
            <MenuItem value="user">User</MenuItem>
            <MenuItem value="admin">Admin</MenuItem>
          </Select>
        </Grid>
      </Grid>
      <Grid item container columnSpacing={2} xs={12} sm={12} md={12}>
        <Grid item xs={4}>
          <TextField name="userName" label="User Name" value={userData.userName} onChange={handleInputChange} fullWidth />
        </Grid>
        <Grid item xs={4}>
          <TextField name="email" label="Email" value={userData.email} onChange={handleInputChange} fullWidth />
        </Grid>
      </Grid>
      <Grid item xs={12} style={{ textAlign: 'center' }}>
        <Button variant="contained" color="primary" onClick={handleAddRow}>
          Submit
        </Button>
      </Grid>
    </Grid>
  );
};

export default Add;
