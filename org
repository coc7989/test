import React from 'react';
import { TextField, Button, Grid, Select, MenuItem } from '@mui/material';

const Add = ({newRow, handleInputChange, handleAddRow}) => {
  return (
    <Grid container spacing={2} alignItems="center">
      <Grid item container columnSpacing={2} xs={12} sm={12} md={12}>
        <Grid item xs={4}>
          <TextField name="ID" label="ID" value={newRow.ID} onChange={handleInputChange} fullWidth />
        </Grid>
        <Grid item xs={4}>
          <Select
            name="ROLE"
            label="ROLE"
            value={newRow.ROLE}
            onChange={handleInputChange}
            fullWidth
          >
            <MenuItem value="user">User</MenuItem>
            <MenuItem value="admin">Admin</MenuItem>
          </Select>
        </Grid>
      </Grid>
      <Grid item xs={12} style={{ textAlign: 'center' }}>
        <Button variant="contained" color="primary" onClick={handleAddRow}>
          Submit
        </Button>
      </Grid>
    </Grid>
  );
};

export default Add;
