pipeline {
    agent any
    environment {
        vendor = "hbo"
        mappedlicense = 'hbo.dbdflc'
        backupFile = "${mappedlicense}.${reqId}"
    }
    stages {
        stage('Execute SSH Commands') {
            steps {
                script {
                    sh '''
                    ssh -t user@hostname '/bin/bash -c "source /path/to/remote/script.sh \"$vendor\" \"$mappedlicense\" \"$backupFile\""'
                    '''
                }
            }
        }
    }
}
