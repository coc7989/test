// MailComponent.js

import React, { useState } from 'react';
import { TextField, Button } from '@mui/material';

function MailComponent({ interval, vendor, server }) {
  const [subject, setSubject] = useState(`[${interval}] ${vendor} - ${server} Subject`);
  const [body, setBody] = useState(`[${interval}] ${vendor} - ${server} Body`);

  const handleSubjectChange = (event) => {
    setSubject(event.target.value);
  };

  const handleBodyChange = (event) => {
    setBody(event.target.value);
  };

  return (
    <div>
      <TextField label="Subject" value={subject} onChange={handleSubjectChange} />
      <TextField label="Body" multiline rows={4} value={body} onChange={handleBodyChange} />
      <Button variant="contained" color="primary">
        Send Mail
      </Button>
    </div>
  );
}

export default MailComponent;
