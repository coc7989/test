import React, { useState } from "react"
import AceEditor from "react-ace"

import "ace-builds/src-noconflict/mode-javascript"
import "ace-builds/src-noconflict/theme-github" // Choose your preferred theme
import "ace-builds/src-noconflict/ext-language_tools" // Enable autocompletion
import "ace-builds/src-noconflict/ext-spellcheck" // Enable spell chec
const TextEditor = () => {
  const [text, setText] = useState(
    `This is a sample sentence with misspelled words: helo, worrld, and speeling.`
  )
  const handleTextChange = (value) => {
    setText(value)
  }

  return (
    <AceEditor
      mode='javascript'
      theme='github'
      value={text}
      onChange={handleTextChange}
      name='editor'
      editorProps={{ $blockScrolling: true }}
      width='100%'
      height='500px' // Adjust the height as needed
      showPrintMargin={false}
      enableBasicAutocompletion={true}
      enableLiveAutocompletion={true}
      enableSnippets={true}
      setOptions={{
        spellcheck: true, // Enable spell checking
      }}
    />
  )
}

export default TextEditor
