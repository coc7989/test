# 1. Install Oracle Instant Client
# Replace <version> with your desired version, e.g., 19.3
yum install oracle-release-el7
yum-config-manager --enable ol7_oracle_instantclient
yum install oracle-instantclient<version>-basic
yum install oracle-instantclient<version>-devel

# 2. Set Environment Variables
export LD_LIBRARY_PATH=/usr/lib/oracle/<version>/client64/lib:$LD_LIBRARY_PATH

# 3. Install Python Development Tools
yum install python-devel python-pip

# 4. Install cx_Oracle
pip install cx_Oracle
